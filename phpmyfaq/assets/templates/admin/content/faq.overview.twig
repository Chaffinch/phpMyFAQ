<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">
    <i aria-hidden="true" class="fa fa-list-alt"></i>
    {{ msgHeaderFAQOverview }} <span class="badge bg-danger">PREVIEW</span>
  </h1>
</div>

{% if categories is empty %}
  <div class="alert alert-danger" role="alert">
    {{ errorNoRecords }}
  </div>
{% endif %}

<div class="accordion" id="pm-admin-faq-overview">
  {% for category in categories %}
  <div class="accordion-item">
    <div class="accordion-header category-header-indent-{{ category.indent }}">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
              data-bs-target="#category-id-{{ category.id }}">

        <span class="">{{ category.name }}</span>
        <span class="badge bg-secondary mx-1">{{ numberOfRecords[category.id] ?? 0 }} {{ msgRecords }}</span>

      </button>
    </div>
    <div id="category-id-{{ category.id }}" class="accordion-collapse collapse"
         data-bs-parent="#category-id-{{ category.id }}">
      <div class="accordion-body">
        <table class="table table-bordered table-hover table-sm align-middle">
          <thead class="thead-light">
          <tr>
            <th colspan="3" class="align-middle">
              ID
            </th>
            <th class="align-middle">
              {{ msgQuestion }}
            </th>
            <th class="align-middle">
              {{ msgDate }}
            </th>
            <th class="align-middle">
              <div class="form-check">
                <input class="form-check-input pmf-admin-faqs-all-sticky" type="checkbox" value=""
                       data-pmf-category-id="{{ category.id }}" data-pmf-csrf="{{ csrfToken }}"
                       id="sticky_category_block_{{ category.id }}">
                <label class="form-check-label" for="sticky_category_block_{{ category.id }}">
                  {{ msgSticky }}
                </label>
              </div>
            </th>
            <th class="align-middle">
              <div class="form-check">
                <input class="form-check-input pmf-admin-faqs-all-active" type="checkbox" value=""
                       data-pmf-category-id="{{ category.id }}" data-pmf-csrf="{{ csrfToken }}"
                       id="active_category_block_{{ category.id }}">
                <label class="form-check-label" for="sticky_category_block_{{ category.id }}">
                  {{ msgActive }}
                </label>
              </div>
            </th>
            <th colspan="2" class="align-middle">
              Actions
            </th>
          </tr>
          </thead>
          <tbody>

          </tbody>
        </table>

      </div>
    </div>
  </div>
  {% endfor %}
</div>
